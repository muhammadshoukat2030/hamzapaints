<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login</title>
  <style>
    /* ===== Reset ===== */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body, html {
      height: 100%;
      font-family: 'Segoe UI', sans-serif;
      overflow: hidden;
    }

    /* ===== Gradient Background Animation ===== */
    body {
      background: linear-gradient(-45deg, #06A56C, #00B087, #a6e7d8, #00f0d0);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* ===== Interactive Particles ===== */
    .particle {
      position: absolute;
      border-radius: 50%;
      background: rgba(255,255,255,0.5);
      pointer-events: none;
      animation: float 20s linear infinite;
    }

    @keyframes float {
      0% { transform: translateY(100vh) translateX(0); }
      100% { transform: translateY(-10vh) translateX(50vw); }
    }

    /* ===== Login Form Wrapper ===== */
    .login-wrapper {
      z-index: 10;
      width: 100%;
      max-width: 400px;
      padding: 30px 25px;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.25);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      font-size: 28px;
      color: #fff;
      text-shadow: 0 2px 8px rgba(0,0,0,0.3);
      margin-bottom: 25px;
      text-align: center;
    }

    .form-container {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 18px;
      position: relative;
    }

    .password-wrapper {
      position: relative;
    }

    input {
      padding: 15px;
      font-size: 16px;
      border-radius: 12px;
      border: none;
      outline: none;
      background: rgba(255,255,255,0.8);
      box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      width: 100%;
    }

    input:focus {
      box-shadow: 0 0 10px rgba(6,165,108,0.6);
      background: rgba(255,255,255,0.95);
    }

    /* Show/Hide password icon */
    .toggle-password {
      position: absolute;
      top: 50%;
      right: 15px;
      transform: translateY(-50%);
      cursor: pointer;
      font-size: 18px;
      color: #555;
      user-select: none;
    }

    button#login {
      padding: 15px;
      font-size: 16px;
      border: none;
      border-radius: 12px;
      background: linear-gradient(45deg, #06A56C, #00B087);
      color: #fff;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 5px 20px rgba(0,0,0,0.2);
    }

    button#login:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 30px rgba(0,0,0,0.35);
    }

    #message {
      text-align: center;
      margin-top: 15px;
      font-size: 15px;
      color: #fff;
      text-shadow: 0 1px 4px rgba(0,0,0,0.5);
    }

    /* ===== Responsive ===== */
    @media (max-width: 600px) {
      h1 { font-size: 24px; }
      .login-wrapper { padding: 20px; border-radius: 15px; }
      input, button#login { padding: 12px; font-size: 14px; }
    }

    @media (max-width: 400px) {
      .login-wrapper { padding: 15px; }
      h1 { font-size: 22px; }
    }

  </style>
</head>
<body>

  <div class="login-wrapper">
    <h1>Admin Login</h1>
    <form id="loginForm" class="form-container">
      <input type="text" name="username" placeholder="Enter Username" required />
      <div class="password-wrapper">
        <input type="password" name="password" placeholder="Enter Password" required id="password" />
        <span class="toggle-password" id="togglePassword">&#128065;</span>
      </div>
      <button id="login" type="submit">Login</button>
    </form>
    <p id="message"></p>
  </div>

  <script>
    // ===== Floating Particles =====
    const particleCount = 30;
    const particles = [];

    for(let i=0; i<particleCount; i++){
      const p = document.createElement('div');
      p.classList.add('particle');
      const size = 5 + Math.random()*8;
      p.style.width = `${size}px`;
      p.style.height = `${size}px`;
      p.style.left = `${Math.random()*100}vw`;
      p.style.top = `${Math.random()*100}vh`;
      p.style.opacity = 0.2 + Math.random()*0.6;
      document.body.appendChild(p);
      particles.push({el: p, speedX: Math.random()*0.5, speedY: Math.random()*0.3});
    }

    function animateParticles(){
      particles.forEach(p => {
        let top = parseFloat(p.el.style.top);
        let left = parseFloat(p.el.style.left);
        top -= p.speedY;
        left += Math.sin(Date.now() * 0.001) * p.speedX;
        if(top < -10) top = 100;
        if(left > 100) left = 0;
        p.el.style.top = top + 'vh';
        p.el.style.left = left + 'vw';
      });
      requestAnimationFrame(animateParticles);
    }
    animateParticles();

    // ===== Show/Hide Password =====
    const togglePassword = document.getElementById("togglePassword");
    const password = document.getElementById("password");
    togglePassword.addEventListener("click", () => {
      password.type = password.type === "password" ? "text" : "password";
    });

    // ===== Login Form Handling =====
    document.getElementById("loginForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const username = e.target.username.value.trim();
      const passwordVal = e.target.password.value.trim();
      const messageEl = document.getElementById("message");
      messageEl.textContent = "";

      try {
        const res = await fetch("/auth/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ username, password: passwordVal })
        });

        const data = await res.json();
        if(!data.success){
          messageEl.style.color = "red";
          messageEl.textContent = data.message;
          return;
        }

        messageEl.style.color = "lightgreen";
        messageEl.textContent = "Logged In Successfully! Redirecting...";
        e.target.username.value = "";
        e.target.password.value = "";

        setTimeout(() => { window.location.href = "/home"; }, 1000);

      } catch(err){
        console.error(err);
        messageEl.style.color = "red";
        messageEl.textContent = "Server error occurred. Try again!";
      }
    });
  </script>

</body>
</html>
